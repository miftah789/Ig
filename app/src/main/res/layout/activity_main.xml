<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/img_view_satu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_launcher_round" />

            <TextView
                android:id="@+id/text_view_satu"
                android:layout_width="293dp"
                android:layout_height="42dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/img_view_satu"
                android:text="jackson"
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif" />

            <ImageView
                android:id="@+id/img_view_dua"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_menu" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_dua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/img_view_tiga"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/img" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_tiga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout_dua"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/img_view_empat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/like" />

            <ImageView
                android:id="@+id/img_view_lima"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_view_empat"
                android:src="@drawable/commant" />

            <ImageView
                android:id="@+id/img_view_enam"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_view_lima"
                android:src="@drawable/send" />

            <ImageView
                android:id="@+id/img_view_tujuh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/save" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_empat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout_tiga"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/text_view_dua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.345.987 like"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_lima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout_empat"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/text_view_tiga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jackson"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/text_view_tiga"
                android:text="senyum adalah ibadah :)"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_view_lima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_tiga"
                android:text="30 menit yang lalu"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
